<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Dapper.SimpleRepository is a Dapper extension that reduces CRUD operations to a single line of code and greatly simplifies other data access operations using filters, queries and stored procedures. It supports Async and non-Async in Framework, Standard and Core</Description>
    <Company />
    <Authors>Casey Crookston</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>Dapper SimpleRepository</Product>
    <Copyright>2020</Copyright>
    <PackageTags>dapper repository CRUD orm micro-orm</PackageTags>
    <PackageReleaseNotes>Description improvement (no code changes).</PackageReleaseNotes>
    <Version>1.0.5</Version>
    <AssemblyVersion>1.0.5.0</AssemblyVersion>
    <PackageProjectUrl>https://github.com/ccrookston/Dapper.SimpleRepository</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ccrookston/Dapper.SimpleRepository</RepositoryUrl>
    <FileVersion>1.0.5.0</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="README.md">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.30" />
    <PackageReference Include="Dapper.SimpleCRUD" Version="2.2.0.1" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="1.1.1" />
  </ItemGroup>

</Project>
